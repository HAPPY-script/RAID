game.StarterGui:SetCore("SendNotification", {
    Title = "Create by HAPPY scriptâœ…",
    Text = "Good luck! ğŸ€",
    Duration = 10,
})

local ScreenGui = Instance.new("ScreenGui")
local MenuFrame = Instance.new("Frame")
local CloseButton = Instance.new("TextButton")
local StartKillButton = Instance.new("TextButton")

local AutoKill = false -- Tráº¡ng thÃ¡i báº­t/táº¯t auto kill

-- Táº¡o GUI
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

MenuFrame.Size = UDim2.new(0, 250, 0, 120)
MenuFrame.Position = UDim2.new(0, 10, 0, 10)
MenuFrame.BackgroundColor3 = Color3.fromRGB(139, 69, 19) -- MÃ u nÃ¢u
MenuFrame.BackgroundTransparency = 0.2
MenuFrame.Active = true
MenuFrame.Draggable = true
MenuFrame.Parent = ScreenGui

CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(0, 5, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
CloseButton.Text = "X"
CloseButton.Parent = MenuFrame

StartKillButton.Size = UDim2.new(0, 120, 0, 50) -- Äiá»u chá»‰nh Ä‘á»™ dÃ i trá»¥c X
StartKillButton.Position = UDim2.new(0, 65, 0, 50)
StartKillButton.BackgroundColor3 = Color3.fromRGB(255, 215, 0) -- MÃ u vÃ ng
StartKillButton.Text = "Start Auto Kill"
StartKillButton.Parent = MenuFrame

-- Chá»©c nÄƒng Ä‘Ã³ng menu
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Táº¡o thÃ´ng bÃ¡o á»Ÿ gÃ³c dÆ°á»›i bÃªn pháº£i
local Notification = Instance.new("TextLabel")
Notification.Size = UDim2.new(0, 200, 0, 50)
Notification.Position = UDim2.new(1, -210, 1, -60) -- Vá»‹ trÃ­ gÃ³c dÆ°á»›i bÃªn pháº£i
Notification.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- MÃ u ná»n Ä‘en
Notification.BackgroundTransparency = 0.5
Notification.TextColor3 = Color3.fromRGB(255, 255, 255) -- MÃ u chá»¯ tráº¯ng
Notification.TextSize = 20
Notification.Text = "Raid Mode: OFF"
Notification.Visible = false -- Báº¯t Ä‘áº§u lÃ  khÃ´ng hiá»ƒn thá»‹
Notification.Parent = ScreenGui

-- Chá»©c nÄƒng báº­t/táº¯t auto kill
StartKillButton.MouseButton1Click:Connect(function()
    AutoKill = not AutoKill
    if AutoKill then
        StartKillButton.Text = "Stop Auto Kill"
        Notification.Text = "Raid Mode: ON"
        Notification.Visible = true -- Hiá»ƒn thá»‹ thÃ´ng bÃ¡o khi báº­t
    else
        StartKillButton.Text = "Start Auto Kill"
        Notification.Visible = false -- áº¨n thÃ´ng bÃ¡o khi táº¯t
    end
end)

-- Script tiÃªu diá»‡t quÃ¡i khÃ´ng lag
local Player = game.Players.LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local HumanoidRootPart = Character:WaitForChild("HumanoidRootPart")
local EnemyFolder = workspace:WaitForChild("Enemies") -- Thay "Enemies" báº±ng tÃªn thÆ° má»¥c chá»©a quÃ¡i
local KillRange = 3000 -- Pháº¡m vi tiÃªu diá»‡t quÃ¡i (3000 studs)

-- HÃ m kiá»ƒm tra khoáº£ng cÃ¡ch
function GetDistance(part)
    if part and part:IsA("BasePart") then
        return (HumanoidRootPart.Position - part.Position).Magnitude
    end
    return math.huge
end

-- HÃ m tiÃªu diá»‡t quÃ¡i
function KillEnemy(enemy)
    local humanoid = enemy:FindFirstChild("Humanoid")
    local rootPart = enemy:FindFirstChild("HumanoidRootPart")
    if humanoid and rootPart and humanoid.Health > 0 then
        humanoid.Health = 0 -- Äáº·t mÃ¡u vá» 0 Ä‘á»ƒ tiÃªu diá»‡t quÃ¡i
    end
end

-- VÃ²ng láº·p chÃ­nh
spawn(function()
    while true do
        if AutoKill then
            for _, enemy in pairs(EnemyFolder:GetChildren()) do
                if enemy:IsA("Model") and GetDistance(enemy:FindFirstChild("HumanoidRootPart")) <= KillRange then
                    KillEnemy(enemy)
                end
            end
        end
        wait(0.1) -- Giáº£m táº£i báº±ng cÃ¡ch chá» 0.1 giÃ¢y
    end
end)
